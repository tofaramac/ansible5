{% else %}
    ServerName www.prepaidmeters.com.{{ tld[0].tld }}
{% endif %}

{% if 'prd' in inventory_hostname %}
    ServerAlias prepaidmeters.com
{% else %}
    ServerAlias prepaidmeters.com.{{ tld[0].tld }}
{% endif %}

    SetEnv SQL_USER prepaidmeters
    SetEnv SQL_PASS F6ik!G7s5P9 
    SetEnv SQL_DB   enbaya
    SetEnv SQL_ERP  enbaya
    SetEnv SQL_CRM  crm618
    SetEnv SQL_juicelinked  juicelinked
    SetEnv SQL_juicelinked_user root
    SetEnv SQL_juicelinkedpass  PKj026Ff
    SetEnv SQL_root      root
    SetEnv SQL_HOST_JUICE 192.168.0.14
    SetEnv SQL_USER_JUICE erpreadonly
    SetEnv SQL_PASS_JUICE sdf7s6fGakdjh
    SetEnv SQL_JUICE aurora
    SetEnv SQL_ERPUSER  root
    SetEnv SQL_ERPPASS  PKj026Ff
    SetEnv SQL_PREPAIDMETERS_DB      prepaidmeters_com
    SetEnv SQL_PREPAIDMETERS_USER    prepaidmeters
    SetEnv SQL_PREPAIDMETERS_PASSWD  F6ik!G7s5P9

    DocumentRoot {{ folders[23].path }}

    <Directory />
        Options FollowSymLinks
        AllowOverride None
    </Directory>

    <Directory {{ folders[23].path }}>
        DirectoryIndex index.php
            Options Indexes FollowSymLinks MultiViews
            AllowOverride None
            Order allow,deny
            allow from all
    </Directory>

    ScriptAlias /cgi-bin/ /usr/lib/cgi-bin/
    <Directory "/usr/lib/cgi-bin">
        AllowOverride None
        Options +ExecCGI -MultiViews +SymLinksIfOwnerMatch
        Order allow,deny
        Allow from all
    </Directory>

    ErrorLog ${APACHE_LOG_DIR}/error.log

    # Possible values include: debug, info, notice, warn, error, crit, alert, emerg.
    LogLevel error

    CustomLog ${APACHE_LOG_DIR}/access.log combined

    Alias /doc/ "/usr/share/doc/"
    <Directory "/usr/share/doc/">
        Options Indexes MultiViews FollowSymLinks
        AllowOverride None
        Order deny,allow
        Deny from all
        Allow from 127.0.0.0/255.0.0.0 ::1/128
    </Directory>

   <Files ~ "^\.ht">
        Order allow,deny
        Deny from all   
    </Files>
    <Files ~ "\.inc">
        Order allow,deny
        Deny from all   
    </Files>

    <Files ~ "\.sql">
        Order allow,deny
        Deny from all   
    </Files>
    <Files ~ "\.sh">
        Order allow,deny
        Deny from all   
    </Files>
    <Files ~ "\.pl">
        Order allow,deny
        Deny from all   
    </Files>
    <Files ~ "\.zip">
        Order allow,deny
        Deny from all   
    </Files>
    <Files ~ "\.gz">
        Order allow,deny
        Deny from all   
    </Files>
    <Files ~ "\.tar">
        Order allow,deny
        Deny from all   
    </Files>
    <Files ~ "~">
        Order allow,deny
        Deny from all   
    </Files>
    <Files ~ "git">
        Order allow,deny
        Deny from all   
    </Files>
    <Files *.ini>
        Order allow,deny
        Deny from all   
    </Files>
    <Files ~ "zzz">
